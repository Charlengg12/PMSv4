# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration
DB_HOST=mysql
DB_USER=ehub_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=ehub_pms
DB_PORT=3306

# JWT Secret (Generate a strong random secret for production)
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_HERE

# Frontend URL (Your production domain)
FRONTEND_URL=https://yourdomain.com

# API URL (Your production domain)
REACT_APP_API_URL=https://yourdomain.com/api

# Server Configuration
PORT=3002
HOST=0.0.0.0
NODE_ENV=production

# Backend Port (for docker-compose)
BACKEND_PORT=3002

# Frontend Port (for docker-compose)
FRONTEND_PORT=80

# Nginx Ports (for docker-compose)
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Redis Configuration (Optional - for caching and sessions)
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_HERE

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-key-here

